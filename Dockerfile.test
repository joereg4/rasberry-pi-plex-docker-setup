# Dockerfile for testing Raspberry Pi 5 Plex setup
# Supports both ARM64 (Raspberry Pi) and x86_64 (CI/CD)
FROM ubuntu:22.04

# Avoid prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install basic requirements
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    bash \
    sudo \
    docker.io \
    docker-compose \
    e2fsprogs \
    util-linux \
    udev \
    bc \
    && rm -rf /var/lib/apt/lists/*

# Install Docker Compose v2 (if not available)
RUN if ! command -v docker compose &> /dev/null; then \
    curl -L "https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose && \
    chmod +x /usr/local/bin/docker-compose; \
    fi

# Set up test environment
WORKDIR /rasberry-pi-plex-docker-setup

# Copy all files
COPY . .

# Make scripts executable
RUN find scripts/ -type f -name "*.sh" -exec chmod +x {} \;

# Create test directories
RUN mkdir -p /test/mnt/blockstore /test/opt/plex

# Set up entrypoint for tests
ENTRYPOINT ["/bin/bash"]